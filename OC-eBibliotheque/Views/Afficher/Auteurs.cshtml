@model List<OC_eBibliotheque.Models.Auteur>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Les auteurs</title>
    <style type="text/css">
        table {
            border-collapse: collapse;
        }

        td, th {
            border: 1px solid black;
        }
    </style>
</head>
<body>
    <table>
        <tr>
            <th>Auteurs - Id</th>
            <th>Auteurs - Nom</th>
        </tr>
        @foreach (OC_eBibliotheque.Models.Auteur auteur in Model)
        {
            <tr>
                <td>@auteur.Id</td>
                <td>@auteur.Nom</td>
            </tr>
        }
    </table>
    <br />
    <div>
        Url "/Afficher/Auteurs"
    </div>
</body>
</html>
